<div class="flex-checkmarks--father">
  <div class="flex-checkmarks--medium-father">
    <div 
      class="flex-checkmarks--son" 
      style="background-color: {{ section.settings.colorBG }};">
        {% if section.settings.content == "WITCF" %}
          <div 
            class="flex-checkmarks--element 
            flex-checkmarks--wallpaper-box
            {% if section.settings.align == "left" %}show-left--image{% else %}dont-show--left{% endif %}">
              <img 
              src="{{ product.metafields.custom.who_is_this_course_for_image | img_url: "master" }}" 
              alt="wallpaper" 
              loading="lazy" 
              class="flex-checkmarks--wallpaper">
            </div>
          <div 
            class="flex-checkmarks--element element-content-adjust">
            <div class="flex-checkmarks--box-{{ section.settings.content_width }} element-flex">
              <h3 
              style="color: {{ section.settings.font_color }}">
              {{ product.metafields.custom.who_is_this_course_for_title }}</h3>
              {% for i in product.metafields.custom.witcf_list.value %}
                {% assign parts = i | split: ':' %}
                <div class="flex-checkmarks--e-child">
                  {% render 'checkmark' %}
                  <p style="color: {{ section.settings.content_font_color }}">
                    <span class="bold-text">{{ parts[0] }}</span>
                  :{{ parts[1] }}
                  </p>
                </div>
              {% endfor %}          
            </div>
          </div>
          <div 
          class="flex-checkmarks--element 
          flex-checkmarks--wallpaper-box
          {% if section.settings.align == "right" %}show-right--image{% else %}dont-show--right{% endif %}">
            <img 
            src="{{ product.metafields.custom.who_is_this_course_for_image | img_url: "master" }}" 
            alt="wallpaper" 
            loading="lazy" 
            class="flex-checkmarks--wallpaper">
          </div>
        {% else %}
        <div 
          class="flex-checkmarks--element 
          flex-checkmarks--wallpaper-box
          {% if section.settings.align == "left" %}show-left--image{% else %}dont-show--left{% endif %}">
            <img 
            src="{{ product.metafields.custom.why_choose_us_image | img_url: "master" }}" 
            alt="wallpaper" 
            loading="lazy" 
            class="flex-checkmarks--wallpaper">
          </div>
          <div 
            class="flex-checkmarks--element element-content-adjust">
            <div 
            class="flex-checkmarks--wallpaper-box
            flex-checkmarks--box-{{ section.settings.content_width }} element-flex">
              <h3 
              style="color: {{ section.settings.font_color }}">
              {{ product.metafields.custom.why_choose_us_headline }}</h3>
              {% for i in product.metafields.custom.wcu_list.value %}
                {% assign parts = i | split: ':' %}
                <div class="flex-checkmarks--e-child">
                  {% render 'checkmark' %}
                  <p style="color: {{ section.settings.content_font_color }}">
                    <span class="bold-text">{{ parts[0] }}</span>
                  :{{ parts[1] }}
                  </p>
                </div>
              {% endfor %}          
            </div>
          </div>
          <div 
          class="flex-checkmarks--element 
          flex-checkmarks--wallpaper-box
          {% if section.settings.align == "right" %}show-right--image{% else %}dont-show--right{% endif %}">
            <img 
            src="{{ product.metafields.custom.why_choose_us_image | img_url: "master" }}" 
            alt="wallpaper" 
            loading="lazy" 
            class="flex-checkmarks--wallpaper">
          </div>
        {% endif %} 
      
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Flex Checkmarks",
    "class": "flex-checkmarks",
    "settings": [
      {
        "type": "color",
        "id": "colorBG",
        "default": "#fff",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "font_color",
        "default": "#000",
        "label": "Font color"
      },
      {
        "type": "color",
        "id": "content_font_color",
        "default": "#000",
        "label": "Content font color"
      },
      {
        "type": "select",
        "id": "content",
        "options": [
          {
            "label": "Why choose us?",
            "value": "WCU"
          },
          {
            "label": "Who is this course for?",
            "value": "WITCF"
          }
        ],
        "label": "Select content",
        "default": "WCU"
      },
      {
        "type": "select",
        "id": "align",
        "options": [
          {
            "label": "Image to the left",
            "value": "left"
          },
          {
            "label": "Image to the right",
            "value": "right"
          }
        ],
        "label": "Select Image Side",
        "default": "right"
      },
      {
        "type": "range",
        "id": "content_width",
        "max": 45,
        "min": 30,
        "step": 5,
        "default": 35,
        "label": "Content box width"
      }
    ],
    "presets": [
      {
        "name": "Flex Checkmarks"
      }
    ]
  }
{% endschema %}