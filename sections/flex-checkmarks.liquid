<div class="flex-checkmarks--father">
  <div class="flex-checkmarks--medium-father">
    <div 
      class="flex-checkmarks--son" 
      style="background-color: {{ section.settings.colorBG }};">
      <div 
        class="flex-checkmarks--element element-margin">
        <div class="flex-checkmarks--box-{{ section.settings.content_width }}">
          <h3 
          style="color: {{ section.settings.font_color }}">
          {{ product.metafields.custom.why_choose_us_headline }}</h3>
          {% for i in product.metafields.custom.witcf_list.value %}
            <div class="flex-checkmarks--e-child">
              {% render 'checkmark' %}
              <p style="color: {{ section.settings.font_color }}">{{ i }}</p>
            </div>
          {% endfor %}          
        </div>
        {% comment %} {% if section.settings.content == "WCU" %}
        {% else %}
        {% endif %} {% endcomment %}
      </div>
      <div class="flex-checkmarks--element flex-checkmarks--wallpaper-box">
        <img 
        src="{{ product.metafields.custom.why_choose_us_image | img_url: "master" }}" 
        alt="wallpaper" 
        loading="lazy" 
        class="flex-checkmarks--wallpaper">
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Flex Checkmarks",
    "class": "flex-checkmarks",
    "settings": [
      {
        "type": "color",
        "id": "colorBG",
        "default": "#fff",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "font_color",
        "default": "#000",
        "label": "Font color"
      },
      {
        "type": "select",
        "id": "content",
        "options": [
          {
            "label": "Why choose us?",
            "value": "WCU"
          },
          {
            "label": "Who is this course for?",
            "value": "WITCF"
          }
        ],
        "label": "Select content",
        "default": "WCU"
      },
      {
        "type": "select",
        "id": "align",
        "options": [
          {
            "label": "Image to the left",
            "value": "left"
          },
          {
            "label": "Image to the right",
            "value": "right"
          }
        ],
        "label": "Select Image Side",
        "default": "right"
      },
      {
        "type": "range",
        "id": "content_width",
        "max": 10,
        "min": 1,
        "step": 1,
        "default": 5,
        "label": "Content box width"
      }
    ],
    "presets": [
      {
        "name": "Flex Checkmarks"
      }
    ]
  }
{% endschema %}