{%- liquid
  assign video_id = section.settings.video.id | default: section.settings.video_url.id
  assign video_alt = section.settings.video.alt | default: section.settings.description
  assign alt = 'sections.video.load_video' | t: description: video_alt | escape
  assign poster = section.settings.video.preview_image | default: section.settings.cover_image
-%}

{%- capture sizes -%}
  {% if section.settings.full_width -%}
    100vw
  {%- else -%}
    (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px)
    calc(100vw - 10rem), 100vw
  {%- endif %}
{%- endcapture -%}

<style>
  .flex-video--father .element-content-adjust {
    background-color: {{ section.settings.colorBG }};
    margin: 0;
    padding: 2em;
  }

  .flex-video--father .element-content-adjust .element-flex p {
    color: {{ section.settings.content_font_color }}
  }

  .flex-video--father .element-content-adjust .element-flex h3 {
    color: {{ section.settings.font_color }}
  }
</style>

<div class="flex-video--father">
  <div 
    class="element-content-adjust">
    <div class="flex-checkmarks--box-{{ section.settings.content_width }} element-flex">
      <h3>{{ section.settings.heading }}</h3>
      <p>{{ section.settings.content }}</p> 
    </div>
  </div>
  <div class=" gradient">
    <div class="video-section isolate section-{{ section.id }}-padding">
      <deferred-media
        class="video-section__media deferred-media gradient global-media-settings"
        data-media-id="{{ video_id }}"
        {% if poster != null %}
          style="--ratio-percent: {{ 1 | divided_by: poster.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        <button
          id="Deferred-Poster-Modal-{{ video_id }}"
          class="video-section__poster media deferred-media__poster media--landscape"
          type="button"
          aria-label="{{ alt }}"
        >
          {%- if poster != null -%}
            {{
              poster
              | image_url: width: 3840
              | image_tag: sizes: sizes, widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt
            }}
          {%- else -%}
            {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
          {%- endif -%}
          <span class="deferred-media__poster-button motion-reduce">
            {%- render 'icon-play' -%}
          </span>
        </button>
        <template>
          {%- if section.settings.video == null and section.settings.video_url != null -%}
            {%- liquid
              assign loop = ''
              if section.settings.enable_video_looping
                assign loop = '&loop=1&playlist=' | append: video_id
              endif
            -%}
            {%- if section.settings.video_url.type == 'youtube' -%}
              <iframe
                src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&autoplay=1{{ loop }}"
                class="js-youtube"
                allow="autoplay; encrypted-media"
                allowfullscreen
                title="{{ section.settings.description | escape }}"
              ></iframe>
            {%- else -%}
              <iframe
                src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1{{ loop }}"
                class="js-vimeo"
                allow="autoplay; encrypted-media"
                allowfullscreen
                title="{{ section.settings.description | escape }}"
              ></iframe>
            {%- endif -%}
          {%- else -%}
            {{
              section.settings.video
              | video_tag:
                image_size: '1100x',
                autoplay: true,
                loop: section.settings.enable_video_looping,
                controls: true,
                muted: false
            }}
          {%- endif -%}
        </template>
      </deferred-media>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Flex video",
    "class": "flex-vide--section",
    "disabled_on": {
    "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "Heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "default": "<p>Content</p>",
        "label": "Content"
      },
      {
        "type": "color",
        "id": "colorBG",
        "default": "#fff",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "font_color",
        "default": "#000",
        "label": "Font color"
      },
      {
        "type": "color",
        "id": "content_font_color",
        "default": "#000",
        "label": "Content font color"
      },
      {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
      {
      "type": "video_url",
      "id": "video_url",
      "accept": ["youtube", "vimeo"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "Video URL",
      "info": "Video URL"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "Cover Image"
    },
      {
        "type": "select",
        "id": "align",
        "options": [
          {
            "label": "Video to the left",
            "value": "left"
          },
          {
            "label": "Video to the right",
            "value": "right"
          }
        ],
        "label": "Select Video Side",
        "default": "right"
      },
      {
        "type": "range",
        "id": "content_width",
        "max": 45,
        "min": 30,
        "step": 5,
        "default": 35,
        "label": "Content box width"
      }
    ],
    "presets": [
      {
        "name": "Flex Video"
      }
    ]
  }
{% endschema %}
